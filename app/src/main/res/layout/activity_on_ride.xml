<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/edittext_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:layout_constraintEnd_toStartOf="parent"
    app:layout_constraintHorizontal_bias="0.473"
    app:layout_constraintStart_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@drawable/bg_view2" />

        <TextView
            android:id="@+id/tvRideOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/carter_one"
            android:text="Ride Ongoing...."
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </FrameLayout>

    <TextView
        android:id="@+id/Payment_detailsText"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Ride States"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="103dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/resume2" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:padding="16dp"/>

    <!-- Ride Information Section -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:layout_marginBottom="16dp">

        <!-- Ride Start -->
        <TextView
            android:id="@+id/ride_starttext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/textview_background"
            android:gravity="start"
            android:padding="8dp"
            android:text="Ride Start  :"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_background"
            android:gravity="end"
            android:padding="8dp"
            android:text="Station 1"
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <!-- Ride End -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/textview_background"
            android:gravity="start"
            android:padding="8dp"
            android:text="Ride End    :"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_background"
            android:gravity="end"
            android:padding="8dp"
            android:text="Loading...."
            android:textColor="@color/OnRideBill"
            android:textSize="18sp" />

        <!-- Start Time -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/textview_background"
            android:gravity="start"
            android:padding="8dp"
            android:text="Start Time :\n"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_background"
            android:gravity="end"
            android:padding="8dp"
            android:text="Start Time Value\n "
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <!-- End Time -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/textview_background"
            android:gravity="start"
            android:padding="8dp"
            android:text="End Time   :\n"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_background"
            android:gravity="end"
            android:padding="8dp"
            android:text="Loading....\n "
            android:textColor="@color/OnRideBill"
            android:textSize="18sp" />
    </GridLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"
        android:layout_marginBottom="16dp"/>

    <!-- Bill Information Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:text="Bill Information"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins">

        <!-- Docking Charge -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/textview_background"
            android:gravity="start"
            android:padding="8dp"
            android:text="Docking Charge :"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDocCharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_background"
            android:gravity="end"
            android:padding="8dp"
            android:text="Charge Value"
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <!-- Journey Fare -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="20dp"
            android:text="Journey Fare  :"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:padding="8dp"
            android:gravity="start"
            android:background="@drawable/textview_background"/>

        <TextView
            android:id="@+id/tvRideCost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_background"
            android:gravity="end"
            android:padding="8dp"
            android:text="Loading...."
            android:textColor="@color/OnRideBill"
            android:textSize="18sp" />

        <!-- Trip Total -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/textview_background"
            android:gravity="start"
            android:padding="8dp"
            android:text="Trip Total :"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalCost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_background"
            android:gravity="end"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="Loading...."
            android:textColor="@color/OnRideBill"
            android:textSize="18sp" />
    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/parkDoorScan"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_orance"
        android:fontFamily="@font/abeezee"
        android:text="Door scanner"
        android:textColor="#ffffff"
        android:textSize="27sp"
        android:textStyle="bold"
        tools:fontFamily="@font/abeezee" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/parkLockScan"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_orance2"
        android:fontFamily="@font/abeezee"
        android:text="Lock scanner"
        android:textColor="#ffffff"
        android:textSize="27sp"
        android:textStyle="bold"
        tools:fontFamily="@font/abeezee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:textAlignment="center"
        android:fontFamily="@font/carter_one"
        android:textSize="17sp"
        android:text="Scan parking station door QR code\nto get inside"/>

</LinearLayout>


